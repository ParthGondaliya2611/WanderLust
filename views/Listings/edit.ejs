<%layout("/Layouts/boilerplat.ejs")-%>
<br />
<div class="row">
  <div class="col-8 offset-2">
    <h3>Edit Listing</h3>
    <form
      method="post"
      action="/listings/<%-list._id%>?_method=PUT"
      novalidate
      class="needs-validation"
    >
      <div>
        <label for="title" class="form-label">title</label>
        <input
          type="text"
          name="title"
          placeholder="Enter Listing title"
          class="form-control"
          value="<%-list.title%>"
          required
        />
        <div class="valid-feedback">Title Looks Good!</div>
        <div class="invalid-feedback">Please Enter valid Title</div>
      </div>

      <br />
      <div>
        <label for="description" class="form-label">description</label>
        <textarea name="description"  class="form-control" rows="5" required>

      <%-list.description%>
      </textarea
        >
        <div class="invalid-feedback">Please Enter valid Description</div>
      </div>
      <br />

      <div>
        <label for="image" class="form-label">Image URL</label>
        <input
          type="text"
          name="url"
          placeholder="Enter image URL"
          class="form-control"
          required
          value="<%-list.image.url%>"
        />
      </div>
      <br />

      <div>
        <label for="filename" class="form-label">filename</label>
        <input
          type="text"
          required
          name="filename"
          placeholder="Enter image FileName"
          class="form-control"
          value="<%-list.image.filename%>"
        />
        <div class="invalid-feedback">Please Enter valid FileName</div>

        <br />
      </div>
      <div class="row">
        <div class="mb-3 col-4">
          <label for="number" class="form-label">number</label>
          <input
            type="number"
            required
            name="price"
            placeholder="Enter Price"
            class="form-control"
            value="<%- list.price  %>"
          />
          <div class="invalid-feedback">Please Enter valid Price</div>

          <br />
        </div>
        <div class="mb-3 col-8">
          <label for="country" class="form-label">country</label>
          <input
            type="text"
            required
            name="country"
            class="form-control"
            placeholder="Enter Your location"
            value="<%- list.country  %>"
          />
          <div class="invalid-feedback">Please Enter valid Country</div>

          <br />
        </div>
      </div>
      <div>
        <label for="location" class="form-label">Location</label>
        <input
          required
          type="text"
          name="location"
          class="form-control"
          placeholder="Enter Your location"
          value="<%-list.location%>"
        />
        <div class="invalid-feedback">Please Enter valid Location</div>

        <br />
      </div>

      <div><button class="btn btn-dark edit-btn">Edit</button></div>
      <br />
    </form>
  </div>
</div>
