<%layout("/Layouts/boilerplat.ejs")-%>
<body>
  <h3>All Listings</h3>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <%for( lists of allListings){%>

    <a href="/listing/<%=lists._id%>" class="Listing-link">
      <div class="card col" style="width: 20rem">
        <img
          src="<%=lists.image.url%>"
          class="card-img-top"
          alt="listing-image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b> <%=lists.title%></b>
            <br />
            &#x20B9;<%=lists.price.toLocaleString("en-IN")%>/ night
          </p>
        </div>
      </div>
    </a>
    <%}%>
  </div>
</body>
